      { "value": "+10%", "color": "#dee09f" },
      { "value": "+20%", "color": "#bbbf7c" },
      { "value": "+40%", "color": "#9da360" },
      { "value": "+60%", "color": "#7e8745" },
      { "value": "+80%", "color": "#5b6e00" }
    ]
  },
