{
  "name": "prism-alerting",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "node": ">=20.6.0",
    "npm": "10"
  },
  "author": "",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@1.22.22",
  "_resolutions": {
    "glob": ">=10.5.0 because of jest and typeorm-seeding ; try to remove once in a while."
  },
  "resolutions": {
    "glob": ">=10.5.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test,scripts}/**/*.{ts,js}\" --max-warnings 0 --fix",
    "setup:common": "sh -c \"rimraf ./node_modules/prism-common && cd ../common && yarn install && yarn build\" && sh -c \"yarn install --check-files\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node $(yarn bin typeorm)",
    "migration:generate": "yarn typeorm migration:generate",
    "migration:run": "yarn typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "typeorm-seeding": "ts-node $(yarn bin typeorm-seeding)",
    "alert-worker": "yarn ts-node src/alert-worker.ts",
    "aa-storm-alert-worker": "yarn ts-node src/aa-storm-alert-runner.ts",
    "aa-flood-alert-worker": "yarn ts-node src/aa-flood-alert-runner.ts",
    "docker-alert": "source ../api/set_envs.sh && docker compose run --entrypoint 'yarn alert-worker' alerting-node",
    "audit": "audit-ci --config .audit-ci.json"
  },
  "dependencies": {
    "@turf/bbox": "^6.3.0",
    "bluebird": "^3.7.2",
    "ejs": "^3.1.10",
    "geojson": "^0.5.0",
    "jimp": "^1.6.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "nodemailer": "^7.0.10",
    "pg": "^8.5.1",
    "prism-common": "file:../common",
    "puppeteer": "^24.1.1",
    "typeorm": "^0.3.27",
    "typeorm-naming-strategies": "^1.1.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.12",
    "@types/jimp": "^0.2.28",
    "@types/node": "20.14.8",
    "@types/node-fetch": "^2.5.8",
    "@types/nodemailer": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "audit-ci": "^7.1.0",
    "eslint": "^8.45.0",
    "faker": "^4.1.0",
    "glob": "^10.5.0",
    "jest": "29.7.0",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^29.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typeorm-seeding": "^1.6.1",
    "typescript": "5.9.3",
    "yargs": "^15.4.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": [
      ".spec.ts$",
      ".test.ts$"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
